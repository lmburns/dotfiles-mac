# Desc: lolcate fzf

zmodload -F zsh/zutil b:zparseopts
zparseopts -D -A opts -- u -update

(( $+opts[-u] + $+opts[--update] )) && lolcate --db git --update && return 0

# lolcate --db "$@" \

local sel
sel=$(\
  lolcate --db git "$@" \
  | fzf \
    --delimiter / \
    --with-nth 6.. \
    --query "${*:-}"
)

[[ -n "$sel" ]] && ${EDITOR:-vim} "$sel"

# vim: ft=zsh:et:sw=0:ts=2:sts=2:fdm=marker:fmr={{{,}}}:
