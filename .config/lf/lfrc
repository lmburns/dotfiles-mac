  $$EDITOR ~/.config/lf/lfrc
  source ~/.config/lf/lfrc
}}


# open the lfrc scope.sh
cmd edit_scope :{{
  $$EDITOR ~/.config/lf/scope
  source ~/.config/lf/scope
}}


